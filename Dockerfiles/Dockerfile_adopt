    pip install fair-esm && \
    pip install jupyter && \
    pip install pandas && \
    pip install plotly && \
    pip install biopython && \
    pip install pytorch-lightning-bolts && \
    pip install scikit-learn && \
    pip install bertviz && \
    pip install biopython && \
    pip install skl2onnx && \
    pip install onnxruntime && \
    pip install spacy && \
    pip install wandb
